<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyMuda">
    <LinearLayout
        android:padding="12dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/foto_barang"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/liquid"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/nama_barang"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benih Padi Unggul"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 50000,-"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/bintang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:text="4.5"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                >
                <TextView
                    android:id="@+id/jumlahkirim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 terjual"
                    android:textColor="@color/colorBlack"/>/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/kota_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponorogo"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>